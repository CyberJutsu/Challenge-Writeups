{
	"name": "temppad",
	"version": "1.0.0",
	"description": "TempPad - Lightweight Web-based Note Taking and Sharing",
	"scripts": {
		"db:generate": "prisma generate",
		"db:reset": "pnpm exec prisma migrate reset",
		"db:migrate": "pnpm exec prisma migrate dev --name init",
		"db:seed": "pnpm exec ts-node prisma/seeddata.ts",
		"db:studio": "prisma studio",
		"migrate:reset": "pnpm exec prisma migrate reset",
		"start": "npx ts-node --transpile-only src/index.ts",
		"dev": "ts-node-dev --respawn --transpile-only src/index.ts",
		"dev:https": "ENABLE_HTTPS=true ts-node-dev --respawn --transpile-only src/index.ts",
		"start:https": "ENABLE_HTTPS=true npx ts-node --transpile-only src/index.ts",
		"generate-certs": "bash scripts/generate-certs.sh",
		"generate-certs:win": "powershell -ExecutionPolicy Bypass -File scripts/generate-certs.ps1",
		"format": "pnpm exec prettier . --write --tab-width 4 --use-tabs"
	},
	"dependencies": {
		"@fastify/static": "^8.2.0",
		"@fastify/view": "^11.1.1",
		"@prisma/client": "^6.16.2",
		"ejs": "^3.1.10",
		"fastify": "^5.6.1",
		"node-cron": "^4.2.1",
		"ts-node": "^10.9.2"
	},
	"devDependencies": {
		"@types/ejs": "^3.1.5",
		"@types/node": "^24.5.2",
		"prisma": "^6.16.2",
		"ts-node-dev": "^2.0.0",
		"typescript": "^5.9.2"
	},
	"packageManager": "pnpm@10.17.1"
}

<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.PixelBlackout" parent="Theme.MaterialComponents.DayNight">
        <item name="colorPrimary">@color/primary_blue</item>
        <item name="colorOnPrimary">@color/text_primary</item>
        <item name="colorPrimaryVariant">@color/secondary_blue</item>
        <item name="colorSecondary">@color/accent_blue</item>
        <item name="colorOnSecondary">@color/text_primary</item>
        <item name="android:colorBackground">@color/background_black</item>
        <item name="colorOnBackground">@color/text_primary</item>
        <item name="colorSurface">@color/surface_black</item>
        <item name="colorOnSurface">@color/text_primary</item>
        <item name="android:statusBarColor">@color/primary_black</item>
        <item name="android:navigationBarColor">@color/primary_black</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="colorError">@color/error_red</item>
        <item name="colorOnError">@color/text_primary</item>
    </style>

    <style name="ModernButton" parent="Widget.MaterialComponents.Button">
        <item name="android:background">@drawable/modern_button_background</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:padding">16dp</item>
        <item name="cornerRadius">24dp</item>
    </style>

    <style name="ModernText">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="ModernInput" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/primary_blue</item>
        <item name="boxStrokeWidth">2dp</item>
        <item name="boxCornerRadiusTopStart">16dp</item>
        <item name="boxCornerRadiusTopEnd">16dp</item>
        <item name="boxCornerRadiusBottomStart">16dp</item>
        <item name="boxCornerRadiusBottomEnd">16dp</item>
        <item name="hintTextColor">@color/text_secondary</item>
        <item name="android:textColorHint">@color/text_secondary</item>
    </style>

    <style name="ModernCard" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/surface_black</item>
        <item name="cardCornerRadius">20dp</item>
        <item name="cardElevation">8dp</item>
        <item name="android:layout_margin">16dp</item>
    </style>

    <style name="AppTheme" parent="Theme.PixelBlackout" />
</resources>
